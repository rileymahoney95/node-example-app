{
  "name": "node-express-typescript-api",
  "version": "1.0.0",
  "description": "Node.js API with Express and TypeScript",
  "main": "dist/server.js",
  "scripts": {
    "start": "node -r reflect-metadata -r ./tsconfig-paths-bootstrap.js dist/server.js",
    "dev": "nodemon -r tsconfig-paths/register src/server.ts",
    "build": "tsc",
    "test": "jest",
    "lint": "eslint . --ext .ts",
    "migration:generate": "typeorm-ts-node-commonjs migration:generate -d src/config/db/datasource.ts src/config/db/migrations/migration",
    "migration:run": "ts-node -r ./tsconfig-paths-bootstrap.js src/config/db/scripts/run-migrations.ts"
  },
  "dependencies": {
    "@asteasolutions/zod-to-openapi": "^7.3.0",
    "@aws-sdk/client-dynamodb": "^3.x",
    "@aws-sdk/lib-dynamodb": "^3.x",
    "bcryptjs": "^2.4.x",
    "class-validator": "^0.14.x",
    "cors": "^2.8.x",
    "dotenv": "^16.x",
    "express": "^4.x",
    "helmet": "^7.x",
    "inversify": "^6.2.2",
    "jsonwebtoken": "^9.x",
    "pg": "^8.x",
    "swagger-ui-express": "^5.x",
    "typeorm": "^0.3.x",
    "typeorm-extension": "^3.6.3",
    "pino": "^8.x",
    "pino-pretty": "^10.x",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.x",
    "@types/cors": "^2.8.x",
    "@types/express": "^4.x",
    "@types/jsonwebtoken": "^9.x",
    "@types/node": "^20.x",
    "@types/swagger-ui-express": "^4.x",
    "@typescript-eslint/eslint-plugin": "^6.x",
    "@typescript-eslint/parser": "^6.x",
    "eslint": "^8.x",
    "nodemon": "^3.x",
    "ts-node": "^10.x",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.x"
  }
}
